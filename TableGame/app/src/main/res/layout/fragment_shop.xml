<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game_1">

    <com.game.tablegame.core.library.CustomButton
        android:id="@+id/menuButton"
        style="@style/BasicText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/bg_button"
        android:text="@string/menu"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.game.tablegame.core.library.CustomButton
        android:id="@+id/balanceTextView"
        style="@style/BasicText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="@drawable/bg_player_score"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_table"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:id="@+id/img_bg_1"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_game_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_bg_2"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_game_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_bg_3"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_game_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_bg_4"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_game_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_bg_1" />

        <ImageView
            android:id="@+id/img_bg_5"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_game_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_bg_4" />

        <ImageView
            android:id="@+id/img_bg_6"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:background="@drawable/bg_game_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_bg_4" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_1"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_1"
            app:layout_constraintStart_toStartOf="@+id/img_bg_1"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_1"
            tools:text="SELECT" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_2"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_2"
            app:layout_constraintStart_toStartOf="@+id/img_bg_2"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_1"
            tools:text="SELECT" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_3"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_3"
            app:layout_constraintStart_toStartOf="@+id/img_bg_3"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_1"
            tools:text="SELECT" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_4"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_4"
            app:layout_constraintStart_toStartOf="@+id/img_bg_4"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_4"
            tools:text="SELECT" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_5"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_5"
            app:layout_constraintStart_toStartOf="@+id/img_bg_5"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_4"
            tools:text="SELECT" />

        <com.game.tablegame.core.library.CustomButton
            android:id="@+id/button_bg_6"
            style="@style/BasicText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/img_bg_6"
            app:layout_constraintStart_toStartOf="@+id/img_bg_6"
            app:layout_constraintTop_toBottomOf="@+id/img_bg_4"
            tools:text="SELECT" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.game.tablegame.core.library.CustomButton
        android:id="@+id/BUY"
        style="@style/BasicText"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:background="@drawable/bg_button"
        android:text="@string/buy"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>